{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strict":true,
    "skipLibCheck": true,
    "resolveJsonModule": true

  },
  "ts-node": {
    "esm": true,                 // <-- important: enable ESM mode for ts-node
    "experimentalSpecifierResolution": "node" // helps with resolving extensions
  }
}